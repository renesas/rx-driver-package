        <function>EPTPC</function>
        <function>PTPEDMAC</function>
        <incdir>r_config</incdir>
        <incdir>r_ptp_rx</incdir>
		<incdir>r_ptp_rx/src</incdir>
		<section>
            <address>0x00018000</address>
            <name>B_PTPIF_BUFFER_1</name>
        </section>
        <section>
            <address>0x00018000</address>
            <name>B_PTPIF_RX_DESC</name>
        </section>
        <section>
